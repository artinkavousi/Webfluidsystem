{
  "name": "@michaelbrusegard/webgl-fluid-simulation",
  "version": "0.3.20",
  "description": "WebGL Fluid Simulation for modern webpages (works even on mobile)",
  "author": "Michael Brusegard",
  "license": "MIT",
  "access": "public",
  "main": "./dist/webgl-fluid-simulation.umd.js",
  "module": "./dist/webgl-fluid-simulation.mjs",
  "types": "./dist/webgl-fluid-simulation.d.ts",
  "exports": {
    ".": {
      "import": "./dist/webgl-fluid-simulation.mjs",
      "require": "./dist/webgl-fluid-simulation.umd.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "prepare": "mkdir -p dist && cp src/index.d.ts dist/webgl-fluid-simulation.d.ts",
    "build": "vite build",
    "dev": "vite"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/michaelbrusegard/WebGL-Fluid-Simulation.git"
  },
  "bugs": {
    "url": "https://github.com/michaelbrusegard/WebGL-Fluid-Simulation/issues"
  },
  "homepage": "https://github.com/michaelbrusegard/WebGL-Fluid-Simulation#readme",
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "semantic-release": "^21.0.7",
    "vite": "^4.4.9"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  }
}
